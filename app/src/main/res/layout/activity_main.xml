<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#673AB7">
    <LinearLayout
        android:id="@+id/sparks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="1dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/sparkst"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"

            android:text="Welcome To The Sparks Foundation"
            android:textColor="#FFFFFF"
            android:textSize="20sp"

            />

        <ImageView

            android:layout_width="75dp"
            android:layout_height="75dp"

android:backgroundTint="@color/white"
            android:layout_gravity="right"
            android:src="@drawable/sparks_logo" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sparks"

        android:layout_marginTop="1dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Basic  Banking  App"
            android:textColor="#FFFFFF"

            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_below="@+id/bank"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/transfer_money" />

        <Button
            android:id="@+id/view_users"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="View Users"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main"

        android:layout_marginTop="1dp"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/namet"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Designed By - Riyasha   Jaiswal"
            android:textColor="#FFFFFF"
            android:textSize="23sp" />

    </LinearLayout>
</RelativeLayout>